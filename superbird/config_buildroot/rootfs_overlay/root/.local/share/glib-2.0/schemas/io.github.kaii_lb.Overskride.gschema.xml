<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="overskride">
	<schema id="io.github.kaii_lb.Overskride" path="/io/github/kaii_lb/Overskride/">
		<key name="window-width" type="i">
			<default>-1</default>
			<summary>default window width</summary>
		</key>
		<key name="window-height" type="i">
			<default>-1</default>
			<summary>default window height</summary>
		</key>
		<key name="window-maximized" type="b">
			<default>false</default>
			<summary>default window maximized</summary>
		</key>
		<key name="current-adapter-name" type="s">
			<default>""</default>
			<summary>default adapter name which the app chooses at startup</summary>
		</key>
		<key name="original-adapter-name" type="s">
			<default>""</default>
			<summary>original adapter name incase everything else fails</summary>
		</key>
		<key name="store-folder" type="s">
			<default>""</default>
			<summary>where the received files are stored</summary>
		</key>
		<key name="first-auto-accept" type="b">
			<default>true</default>
			<summary>one time auto accept indicator</summary>
		</key>		
	</schema>
</schemalist>

